---
import { SITE_CONFIG } from '../../data/site-config';

export interface Props {
  siteName?: string;
}

const { siteName = SITE_CONFIG.title } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="border-t-2 border-accent-sage/20 mt-auto">
  <div class="container py-6">
    <div class="flex flex-col lg:flex-row justify-between items-center gap-4">
      <!-- Left: Copyright & Info -->
      <div class="text-center lg:text-left flex items-center gap-4">
        <a href="/" class="flex-shrink-0">
          <span class="font-display text-lg tracking-tight"><span class="font-bold">E-BIKE</span> <span class="text-accent-sage font-bold">FIELD GUIDE</span></span>
        </a>
        <p class="text-sm text-accent-clay">
          {currentYear} E-Bike Field Guide. Research-backed e-bike buying guides for outdoor adventures.
        </p>
        <p class="text-xs text-accent-clay/70 mt-1">
          Affiliate Disclosure: We may earn commissions from qualifying purchases.
        </p>
      </div>

      <!-- Center: Links -->
      <div class="flex flex-wrap justify-center gap-3 text-xs text-accent-clay order-last lg:order-none">
        <a href="/blog" class="hover:text-accent-terracotta transition-colors">Guides</a>
        <span class="text-accent-sage/50">•</span>
        <a href="/blog/category" class="hover:text-accent-terracotta transition-colors">Categories</a>
        <span class="text-accent-sage/50">•</span>
        <a href="/about" class="hover:text-accent-terracotta transition-colors">About</a>
        <span class="text-accent-sage/50">•</span>
        <a href="/affiliate-disclosure" class="hover:text-accent-terracotta transition-colors">Affiliate Disclosure</a>
      </div>

      <!-- Right: Social Icons -->
      <div class="flex items-center gap-4">
        {SITE_CONFIG.features.rss && (
          <a
            href="/rss.xml"
            class="text-sm text-accent-clay hover:text-accent-terracotta transition-colors"
            aria-label="RSS Feed"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 11a9 9 0 0 1 9 9"></path>
              <path d="M4 4a16 16 0 0 1 16 16"></path>
              <circle cx="5" cy="19" r="1"></circle>
            </svg>
          </a>
        )}
        
        {SITE_CONFIG.social.github && (
          <a
            href={`https://github.com/${SITE_CONFIG.social.github}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm text-accent-clay hover:text-accent-terracotta transition-colors"
            aria-label="GitHub"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
          </a>
        )}
        
        {SITE_CONFIG.social.twitter && (
          <a
            href={`https://twitter.com/${SITE_CONFIG.social.twitter}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm text-accent-clay hover:text-accent-terracotta transition-colors"
            aria-label="Twitter"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
            </svg>
          </a>
        )}
        
        {SITE_CONFIG.social.linkedin && (
          <a
            href={SITE_CONFIG.social.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm text-accent-clay hover:text-accent-terracotta transition-colors"
            aria-label="LinkedIn"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
              <rect x="2" y="9" width="4" height="12"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </a>
        )}
        
        {SITE_CONFIG.social.youtube && (
          <a
            href={SITE_CONFIG.social.youtube.startsWith('http') ? SITE_CONFIG.social.youtube : 'https://www.youtube.com/@ApateroGroup'}
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm text-accent-clay hover:text-accent-terracotta transition-colors"
            aria-label="YouTube"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>
        )}
        
        {SITE_CONFIG.social.discord && (
          <a
            href={SITE_CONFIG.social.discord}
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm text-accent-clay hover:text-accent-terracotta transition-colors"
            aria-label="Discord"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.210.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.010c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.120.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.210 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418Z"/>
            </svg>
          </a>
        )}
        
        {SITE_CONFIG.social.instagram && (
          <a
            href={`https://instagram.com/${SITE_CONFIG.social.instagram.replace('@', '')}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm text-accent-clay hover:text-accent-terracotta transition-colors"
            aria-label="Instagram"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
        )}
      </div>
    </div>
  </div>
</footer>