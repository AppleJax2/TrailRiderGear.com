---
// Generic Blog CTA Component for Newsletter/Subscription
interface Props {
  language?: string;
}

const { language = 'en' } = Astro.props;
---

<div class="blog-cta-container my-12 lg:my-16">
  <div class="blog-cta-wrapper bg-gradient-to-br from-surface via-background to-surface rounded-2xl p-8 lg:p-12 text-center relative overflow-hidden border border-border">
    <!-- Background pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(255,255,255,0.1),transparent_70%)]"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10">
      <!-- Icon -->
      <div class="w-16 h-16 mx-auto mb-6 bg-text/10 rounded-full flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-text">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
          <polyline points="22,6 12,13 2,6"></polyline>
        </svg>
      </div>

      <!-- Main title -->
      <h3 class="text-2xl lg:text-3xl font-bold mb-4 text-text">
        Enjoyed This Article?
      </h3>

      <!-- Description -->
      <p class="text-lg text-text-muted mb-8 max-w-2xl mx-auto leading-relaxed">
        Get more content like this delivered straight to your inbox. No spam, unsubscribe anytime.
      </p>

      <!-- CTA Button -->
      <div class="flex justify-center">
        <a
          href="#subscribe"
          class="inline-flex items-center justify-center px-8 py-4 bg-text text-background font-semibold rounded-full hover:opacity-90 transition-all duration-200 transform hover:scale-105"
        >
          Subscribe to Newsletter
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2">
            <path d="m9 18 6-6-6-6"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .blog-cta-container {
    margin-left: -1rem;
    margin-right: -1rem;
  }

  @media (min-width: 640px) {
    .blog-cta-container {
      margin-left: -1.5rem;
      margin-right: -1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .blog-cta-container {
      margin-left: -2rem;
      margin-right: -2rem;
    }
  }
</style>
