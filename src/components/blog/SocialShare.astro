---
// Social sharing buttons for blog posts
export interface Props {
  title: string;
  url: string;
  description?: string;
}

const { title, url, description } = Astro.props;

// Encode URLs for sharing
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);
const encodedDescription = description ? encodeURIComponent(description) : '';

// Share URLs for different platforms
const twitterUrl = `https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`;
const redditUrl = `https://reddit.com/submit?url=${encodedUrl}&title=${encodedTitle}`;
---

<div class="social-share">
  <h3 class="social-share-title">Share this article</h3>
  <div class="social-share-buttons">
    <!-- Twitter -->
    <a
      href={twitterUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="social-button social-twitter"
      aria-label="Share on Twitter"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
      </svg>
      <span>Twitter</span>
    </a>

    <!-- Reddit -->
    <a
      href={redditUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="social-button social-reddit"
      aria-label="Share on Reddit"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"/>
      </svg>
      <span>Reddit</span>
    </a>

    <!-- Copy Link -->
    <button
      type="button"
      class="social-button social-copy"
      aria-label="Copy link"
      data-url={url}
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
        <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
      </svg>
      <span>Copy Link</span>
    </button>
  </div>
</div>

<style>
  .social-share {
    margin: 3rem 0 2rem 0;
    padding: 2rem;
    background: hsl(var(--surface) / 0.3);
    border-radius: 0.875rem;
  }

  .social-share-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 1.25rem;
    color: hsl(var(--text));
  }

  .social-share-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .social-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: hsl(var(--text));
    background: hsl(var(--surface));
    border: 1px solid hsl(var(--border));
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
  }

  .social-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px hsl(var(--text) / 0.1);
  }

  .social-button svg {
    flex-shrink: 0;
  }

  .social-twitter:hover {
    background: #1da1f2;
    border-color: #1da1f2;
    color: white;
  }

  .social-reddit:hover {
    background: #ff4500;
    border-color: #ff4500;
    color: white;
  }

  .social-copy:hover {
    background: hsl(var(--text));
    border-color: hsl(var(--text));
    color: hsl(var(--background));
  }

  .social-copy.copied {
    background: #10b981;
    border-color: #10b981;
    color: white;
  }

  @media (max-width: 640px) {
    .social-share {
      padding: 1.5rem;
    }

    .social-button span {
      display: none;
    }

    .social-button {
      padding: 0.625rem;
      justify-content: center;
    }
  }
</style>

<script>
  function initSocialShare() {
    const copyButtons = document.querySelectorAll('.social-copy');

    copyButtons.forEach((button) => {
      button.addEventListener('click', async () => {
        const url = button.getAttribute('data-url');
        if (!url) return;

        try {
          await navigator.clipboard.writeText(url);

          // Visual feedback
          const originalText = button.querySelector('span')?.textContent;
          const span = button.querySelector('span');

          button.classList.add('copied');
          if (span) span.textContent = 'Copied!';

          // Reset after 2 seconds
          setTimeout(() => {
            button.classList.remove('copied');
            if (span && originalText) span.textContent = originalText;
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    });
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initSocialShare);
  } else {
    initSocialShare();
  }

  // Re-initialize on Astro page navigation
  document.addEventListener('astro:page-load', initSocialShare);
</script>
