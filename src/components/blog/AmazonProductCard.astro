---
// AmazonProductCard.astro
// Editorial product recommendation card — Wirecutter-style layout

interface Props {
  id: string;
  name: string;
  brand: string;
  price: string;
  rating?: number;
  reviewCount?: number;
  image?: string;
  features?: string[];
  pros?: string[];
  cons?: string[];
  amazonUrl: string;
  asin?: string;
  isTopPick?: boolean;
  badge?: string;
}

const {
  id,
  name,
  brand,
  price,
  rating = 0,
  reviewCount = 0,
  image,
  features = [],
  pros = [],
  cons = [],
  amazonUrl,
  asin,
  isTopPick = false,
  badge
} = Astro.props;

const displayBadge = isTopPick ? "Our Pick" : badge;
const isAmazonLink = amazonUrl.includes('amazon.com');
const ctaText = isAmazonLink ? 'View on Amazon' : 'View Product';
const ratingDisplay = rating > 0 ? rating.toFixed(1) : null;
const hasProsOrCons = pros.length > 0 || cons.length > 0;
---

<aside class="product-rec not-prose my-10" data-asin={asin} data-product-id={id}>
  <div class="product-card rounded-xl overflow-hidden border border-border bg-surface/40 shadow-sm hover:shadow-md transition-shadow duration-300">

    {/* ── Image + Badge zone ── */}
    <div class="relative bg-surface/60 flex items-center justify-center p-6 sm:p-10">
      {displayBadge && (
        <span class={`absolute top-3 left-3 inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide shadow-sm ${isTopPick ? 'bg-accent-terracotta text-white' : 'bg-background text-text-muted border border-border'}`}>
          {isTopPick && (
            <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
          )}
          {displayBadge}
        </span>
      )}
      <img
        src={image || '/illustrations/placeholder.svg'}
        alt={`${brand} ${name}`}
        class="product-image max-h-[320px] w-auto max-w-[85%] object-contain drop-shadow-md"
        loading="lazy"
        onerror="this.src='/illustrations/placeholder.svg'"
      />
    </div>

    {/* ── Content zone ── */}
    <div class="px-5 py-5 sm:px-6 sm:py-6 flex flex-col gap-4">

      {/* Brand + Rating row */}
      <div class="flex items-center justify-between gap-3">
        <span class="text-xs font-semibold uppercase tracking-widest text-text-light">{brand}</span>
        {ratingDisplay && (
          <span class="inline-flex items-center gap-1 text-sm">
            <svg class="w-4 h-4 text-accent-warm-brown" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
            <span class="product-rating font-bold text-text">{ratingDisplay}</span>
            <span class="product-review-count text-text-light text-xs">({reviewCount.toLocaleString()})</span>
          </span>
        )}
      </div>

      {/* Product name — prominent */}
      <h3 class="text-xl sm:text-2xl font-bold text-text leading-tight">{name}</h3>

      {/* Price */}
      <p class="product-price text-2xl font-bold text-accent-terracotta">{price}</p>

      {/* Key specs — compact pills */}
      {features.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {features.slice(0, 4).map((f) => (
            <span class="inline-block px-2.5 py-1 text-xs font-medium rounded-md bg-background text-text-muted border border-border/60">
              {f}
            </span>
          ))}
        </div>
      )}

      {/* Pros & Cons grid */}
      {hasProsOrCons && (
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 pt-1">
          {pros.length > 0 && (
            <div class="space-y-1.5">
              {pros.slice(0, 3).map((p) => (
                <div class="flex items-start gap-2 text-sm">
                  <svg class="w-4 h-4 mt-0.5 shrink-0 text-accent-sage" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/></svg>
                  <span class="text-text-muted">{p}</span>
                </div>
              ))}
            </div>
          )}
          {cons.length > 0 && (
            <div class="space-y-1.5">
              {cons.slice(0, 3).map((c) => (
                <div class="flex items-start gap-2 text-sm">
                  <svg class="w-4 h-4 mt-0.5 shrink-0 text-accent-terracotta/70" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/></svg>
                  <span class="text-text-muted">{c}</span>
                </div>
              ))}
            </div>
          )}
        </div>
      )}

      {/* CTA */}
      <div class="pt-2">
        <a
          href={amazonUrl}
          target="_blank"
          rel="noopener noreferrer sponsored"
          class="product-cta flex items-center justify-center gap-2 w-full sm:w-auto sm:inline-flex px-6 py-3 text-base font-semibold rounded-lg bg-accent-terracotta text-white hover:bg-accent-terracotta-hover hover:scale-[1.02] active:scale-100 transition-all duration-200 no-underline border-0 shadow-sm shadow-accent-terracotta/20"
          data-amazon-link
        >
          {ctaText}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3"/></svg>
        </a>
        <p class="text-[10px] text-text-light mt-2 sm:mt-1.5">Affiliate link — we may earn a commission at no extra cost to you.</p>
      </div>
    </div>
  </div>
</aside>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('[data-asin]').forEach(async (card) => {
      const asin = card.getAttribute('data-asin');
      if (!asin) return;

      try {
        const res = await fetch(`/api/products/rapidapi/${asin}`);
        if (!res.ok) return;
        const data = await res.json();
        if (data.error) return;

        // Price
        const priceEl = card.querySelector('.product-price');
        if (priceEl && data.price && data.price !== 'Price unavailable') {
          priceEl.textContent = data.price;
        }

        // Image
        const imgEl = card.querySelector('.product-image') as HTMLImageElement | null;
        if (imgEl && data.image) {
          const src = imgEl.getAttribute('src') || '';
          if (src !== data.image) imgEl.src = data.image;
        }

        // Rating number
        if (data.rating > 0) {
          const ratingNum = card.querySelector('.product-rating');
          if (ratingNum) ratingNum.textContent = data.rating.toFixed(1);
          const countEl = card.querySelector('.product-review-count');
          if (countEl && data.reviewCount) {
            countEl.textContent = `(${data.reviewCount.toLocaleString()})`;
          }
        }
      } catch (e) {
        console.debug('Could not fetch live product data:', e);
      }
    });
  });
</script>
