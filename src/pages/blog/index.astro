---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/blog/PostCard.astro';
import { sortPostsByDate, formatDate } from '../../lib/utils';
import { SITE_CONFIG } from '../../data/site-config';
import { getCategories, getTags } from '../../lib/data';
import { getPublishedBlogPosts } from '../../lib/posts';
import { normalizeTagName } from '../../lib/utils';
import { DEFAULT_LANGUAGE } from '../../config/languages';

// Get all non-draft posts from both locations
const allPosts = await getPublishedBlogPosts();

// Sort posts: featured first, then by date
const sortedPosts = sortPostsByDate(allPosts).sort((a, b) => {
  // Featured posts come first
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  // Then sort by date (already sorted by sortPostsByDate)
  return 0;
});

// Pagination settings
const POSTS_PER_PAGE = 15;
const currentPage = 1;
const totalPages = Math.ceil(sortedPosts.length / POSTS_PER_PAGE);
const paginatedPosts = sortedPosts.slice(0, POSTS_PER_PAGE);

const featuredPosts = sortedPosts.filter(post => post.data.featured);
const latestPost = sortedPosts.length > 0 ? sortedPosts[0] : null;
const recentPosts = sortedPosts.slice(1, 7);

// Get categories from data
const categoriesData = await getCategories();
const categories = categoriesData.map(cat => cat.name);

// Function imported from lib/tags.ts

// Get tags from data and count their usage with normalization
const tagsData = await getTags();
const allPostTags = allPosts.flatMap(post => post.data.tags || []);

// Create normalized tag counts
const normalizedTagCounts = new Map();
allPostTags.forEach(tag => {
  const normalized = normalizeTagName(tag);
  normalizedTagCounts.set(normalized, (normalizedTagCounts.get(normalized) || 0) + 1);
});

// Get all tags and sort by usage using normalized matching
const popularTags = tagsData
  .map(tag => ({
    name: tag.name, // Use the canonical name from JSON file
    count: normalizedTagCounts.get(normalizeTagName(tag.name)) || 0
  }))
  .filter(tag => tag.count > 0) // Only show tags that are actually used
  .sort((a, b) => b.count - a.count)
  .slice(0, 10)
  .map(tag => tag.name);

// Stats
const totalPosts = allPosts.length;
const totalCategories = categories.length;

// AI-related categories
const aiCategories = ['AI', 'LLMs', 'Image Generation', 'Video Generation', 'Programming', 'Machine Learning'];
---

<BaseLayout
  siteName={SITE_CONFIG.title}
  currentLanguage={DEFAULT_LANGUAGE}
  pageType="blog-index"
>
  <div class="min-h-screen">
    <!-- Blog Header -->
    <section class="pt-12 pb-6">
      <div class="container">
        <div class="max-w-3xl">
          <h1 class="text-4xl md:text-5xl font-display font-bold mb-2">
            Buying Guides
          </h1>
          <p class="text-base text-text-muted">
            {SITE_CONFIG.description}
          </p>
        </div>
      </div>
    </section>

    <!-- Category Filter Pills -->
    <section class="pb-8">
      <div class="container">
        <div class="flex items-center gap-3 overflow-x-auto pb-2 -mb-2" id="category-filters">
          <button
            data-category="all"
            class="filter-pill active shrink-0 px-4 py-2 text-sm font-medium rounded-full border border-border bg-text text-background transition-all duration-200 hover:opacity-90"
          >
            All Guides
            <span class="ml-1 text-xs opacity-70">{totalPosts}</span>
          </button>
          {categories.map((category) => {
            const count = allPosts.filter(p => p.data.category === category).length;
            return count > 0 && (
              <button
                data-category={category}
                class="filter-pill shrink-0 px-4 py-2 text-sm font-medium rounded-full border border-border bg-transparent text-text transition-all duration-200 hover:bg-surface"
              >
                {category.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ')}
                <span class="ml-1 text-xs text-text-muted">{count}</span>
              </button>
            );
          })}
        </div>
      </div>
    </section>

    <!-- Bento Grid -->
    <section class="pb-16">
      <div class="container">
        {paginatedPosts.length > 0 ? (
          <div id="bento-grid">
            <!-- Featured Hero Card (first post) -->
            {latestPost && (
              <a
                href={`/blog/${latestPost.slug}`}
                class="bento-card bento-hero group block relative overflow-hidden rounded-2xl bg-surface border border-border mb-4"
                data-category={latestPost.data.category}
              >
                <div class="absolute inset-0">
                  {latestPost.data.heroImage ? (
                    <img
                      src={latestPost.data.heroImage}
                      alt={latestPost.data.heroImageAlt || latestPost.data.title}
                      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    />
                  ) : (
                    <div class="w-full h-full bg-gradient-to-br from-primary/20 to-accent-sage/20" />
                  )}
                  <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent" />
                </div>
                <div class="relative h-full flex flex-col justify-end p-6 md:p-8 min-h-[320px] md:min-h-[420px]">
                  <div class="flex items-center gap-2 mb-3">
                    {latestPost.data.featured && (
                      <span class="px-2.5 py-1 bg-primary text-white text-xs font-bold uppercase rounded-full">
                        Featured
                      </span>
                    )}
                    <span class="px-2.5 py-1 bg-white/20 backdrop-blur-sm text-white text-xs font-medium uppercase rounded-full">
                      {latestPost.data.category.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ')}
                    </span>
                  </div>
                  <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-2 group-hover:opacity-90 transition-opacity">
                    {latestPost.data.title}
                  </h2>
                  <p class="text-sm md:text-base text-white/80 line-clamp-2 max-w-2xl mb-3">
                    {latestPost.data.description}
                  </p>
                  <div class="flex items-center gap-3 text-xs text-white/60">
                    <span>{formatDate(latestPost.data.publishDate)}</span>
                    <span>•</span>
                    <span>Read guide →</span>
                  </div>
                </div>
              </a>
            )}

            <!-- Secondary Cards Grid -->
            {recentPosts.length > 0 && (
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                {recentPosts.map((post, index) => (
                  <a
                    href={`/blog/${post.slug}`}
                    class={`bento-card group block relative overflow-hidden rounded-2xl bg-surface border border-border transition-all duration-300 hover:shadow-lg hover:border-text-light hover:-translate-y-0.5 ${index === 0 && recentPosts.length >= 3 ? 'sm:col-span-2 lg:col-span-1' : ''}`}
                    data-category={post.data.category}
                  >
                    <!-- Card Image -->
                    <div class="aspect-[16/10] overflow-hidden bg-surface-hover relative">
                      {post.data.heroImage ? (
                        <img
                          src={post.data.heroImage}
                          alt={post.data.heroImageAlt || post.data.title}
                          class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                          loading="lazy"
                        />
                      ) : (
                        <div class="w-full h-full bg-gradient-to-br from-surface-hover to-border flex items-center justify-center">
                          <svg class="w-12 h-12 text-text-light/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909M3.75 21h16.5A2.25 2.25 0 0022.5 18.75V5.25A2.25 2.25 0 0020.25 3H3.75A2.25 2.25 0 001.5 5.25v13.5A2.25 2.25 0 003.75 21z" />
                          </svg>
                        </div>
                      )}
                      {post.data.featured && (
                        <span class="absolute top-3 left-3 px-2 py-0.5 bg-primary text-white text-[10px] font-bold uppercase rounded-full">
                          Featured
                        </span>
                      )}
                    </div>

                    <!-- Card Content -->
                    <div class="p-5">
                      <div class="flex items-center gap-2 text-xs text-text-muted mb-2.5">
                        <span class="font-semibold uppercase tracking-wide text-primary">
                          {post.data.category.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ')}
                        </span>
                        <span class="text-border">•</span>
                        <span>{formatDate(post.data.publishDate)}</span>
                      </div>

                      <h3 class="text-lg font-semibold mb-2 line-clamp-2 group-hover:text-primary transition-colors">
                        {post.data.title}
                      </h3>

                      <p class="text-sm text-text-muted line-clamp-2 mb-4">
                        {post.data.description}
                      </p>

                      <div class="flex items-center justify-between">
                        <div class="flex flex-wrap gap-1.5">
                          {(post.data.tags || []).slice(0, 2).map((tag) => (
                            <span class="text-[11px] px-2 py-0.5 bg-background rounded-full text-text-muted">
                              {tag}
                            </span>
                          ))}
                        </div>
                        <span class="text-xs font-medium text-text-muted group-hover:text-primary transition-colors flex items-center gap-1">
                          Read
                          <svg class="w-3.5 h-3.5 transition-transform group-hover:translate-x-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                          </svg>
                        </span>
                      </div>
                    </div>
                  </a>
                ))}
              </div>
            )}
          </div>
        ) : (
          <div class="border border-border rounded-2xl p-12 text-center">
            <div class="max-w-sm mx-auto">
              <svg class="w-16 h-16 mx-auto mb-4 text-text-light/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
              </svg>
              <p class="text-text-muted mb-2 font-medium">No guides yet</p>
              <p class="text-sm text-text-light">Check back soon for in-depth buying guides.</p>
            </div>
          </div>
        )}

        <!-- Popular Tags -->
        {popularTags.length > 0 && (
          <div class="mt-12 pt-8 border-t border-border">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-sm font-bold uppercase tracking-wider text-text-muted">Popular Topics</h3>
              <span class="text-xs text-text-light">{totalPosts} guides across {totalCategories} categories</span>
            </div>
            <div class="flex flex-wrap gap-2">
              {popularTags.map((tag) => (
                <a
                  href={`/blog/tag/${normalizeTagName(tag)}`}
                  class="px-3 py-1.5 text-sm border border-border rounded-full hover:bg-text hover:text-background transition-all duration-200"
                >
                  #{tag}
                </a>
              ))}
            </div>
          </div>
        )}

        <!-- Pagination -->
        {totalPages > 1 && (
          <div class="mt-12 flex items-center justify-center gap-2">
            <button
              disabled
              class="px-4 py-2 border border-border rounded-lg text-text-muted cursor-not-allowed opacity-50"
            >
              ← Previous
            </button>
            <div class="flex items-center gap-2">
              <span class="px-4 py-2 bg-text text-background rounded-lg">1</span>
              {Array.from({ length: Math.min(totalPages - 1, 4) }, (_, i) => i + 2).map(page => (
                <a
                  href={`/page/${page}`}
                  class="px-4 py-2 border border-border rounded-lg hover:bg-surface transition-colors"
                >
                  {page}
                </a>
              ))}
              {totalPages > 5 && (
                <>
                  <span class="px-2">...</span>
                  <a
                    href={`/page/${totalPages}`}
                    class="px-4 py-2 border border-border rounded-lg hover:bg-surface transition-colors"
                  >
                    {totalPages}
                  </a>
                </>
              )}
            </div>
            {totalPages > 1 && (
              <a
                href="/page/2"
                class="px-4 py-2 border border-border rounded-lg hover:bg-surface transition-colors"
              >
                Next →
              </a>
            )}
          </div>
        )}
      </div>
    </section>
  </div>

  <!-- Client-side Category Filtering -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const filters = document.querySelectorAll<HTMLElement>('.filter-pill');
      const cards = document.querySelectorAll<HTMLElement>('.bento-card');

      filters.forEach(btn => {
        btn.addEventListener('click', () => {
          const category = btn.getAttribute('data-category');

          // Update active pill
          filters.forEach(f => {
            f.classList.remove('active', 'bg-text', 'text-background');
            f.classList.add('bg-transparent', 'text-text');
          });
          btn.classList.add('active', 'bg-text', 'text-background');
          btn.classList.remove('bg-transparent', 'text-text');

          // Filter cards with animation
          cards.forEach(card => {
            const cardCategory = card.getAttribute('data-category');
            if (category === 'all' || cardCategory === category) {
              card.style.display = '';
              card.style.opacity = '0';
              card.style.transform = 'translateY(8px)';
              requestAnimationFrame(() => {
                card.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
              });
            } else {
              card.style.opacity = '0';
              card.style.transform = 'translateY(8px)';
              setTimeout(() => {
                card.style.display = 'none';
              }, 200);
            }
          });
        });
      });
    });
  </script>
</BaseLayout>