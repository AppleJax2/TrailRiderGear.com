---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/landing/HeroSection.astro';
import ShowcaseSection from '../components/landing/ShowcaseSection.astro';
import ProcessSection from '../components/landing/ProcessSection.astro';
import BlogSection from '../components/landing/BlogSection.astro';
import FAQSection from '../components/landing/FAQSection.astro';
---

<BaseLayout
  title="E-Bike Field Guide - E-Bike Buying Guides for Outdoor Adventures"
  description="Research-backed buying guides for e-bike accessories built for hunting, fishing, and outdoor adventures. Find the best gear for your electric bike expeditions."
  hideSearch={false}
  hideThemeToggle={false}
  siteName="E-Bike Field Guide"
>
  <HeroSection />
  <ShowcaseSection />
  <ProcessSection />
  <BlogSection />
  <FAQSection />

  <!-- Schema.org Structured Data -->
  <script type="application/ld+json" is:inline>
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "E-Bike Field Guide",
      "description": "Research-backed buying guides for e-bikes and accessories built for hunting, fishing, and outdoor adventures.",
      "url": "https://ebikefieldguide.com",
      "author": {
        "@type": "Organization",
        "name": "E-Bike Field Guide",
        "url": "https://ebikefieldguide.com"
      },
      "publisher": {
        "@type": "Organization",
        "name": "E-Bike Field Guide",
        "url": "https://ebikefieldguide.com",
        "logo": {
          "@type": "ImageObject",
          "url": "https://ebikefieldguide.com/Favicon.png"
        }
      },
      "mainEntity": {
        "@type": "ItemList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Hunting E-Bike Accessories"
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": "Fishing Gear & Rod Holders"
          },
          {
            "@type": "ListItem",
            "position": 3,
            "name": "Cargo Systems & Racks"
          },
          {
            "@type": "ListItem",
            "position": 4,
            "name": "Navigation & Power Accessories"
          }
        ]
      }
    }
  </script>
</BaseLayout>